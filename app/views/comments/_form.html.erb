<div class="container w-50">
  <%= form_for comment, url: url, method: method, html: { class: 'custom-form' } do |form| %>
    <div class="form-group mb-4">
      <%= form.label :text, required: true %>
      <%= form.text_field :text, class: "form-control" %>
      <%= error_for form.object, :text %>
    </div>
    <div class="actions">
      <%= form.submit submit_content, class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
