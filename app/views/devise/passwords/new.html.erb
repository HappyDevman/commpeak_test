<div class="container w-50">
  <h2 class="my-5 text-center font-weight-bold">Forgot your password?</h2>
  <hr>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'custom-form mb-4'  }) do |f| %>
    <div class="field mb-4">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      <%= error_for f.object, :email %>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: 'btn btn-success w-50' %>
    </div>
  <% end %>

  <div class="text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
