<div class="container w-50">
  <h2 class="my-5 text-center font-weight-bold">Sign up</h2>
  <hr>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'custom-form mb-4' }) do |f| %>
    <div class="field mb-4">
      <%= f.label :email, required: true %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      <%= error_for f.object, :email %>
    </div>

    <div class="field mb-4">
      <div class="d-flex">
        <%= f.label :password, required: true %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
      </div>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      <%= error_for f.object, :password %>
    </div>

    <div class="field mb-5">
      <%= f.label :password_confirmation, required: true %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      <%= error_for f.object, :password_confirmation %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: "btn btn-outline-dark w-50" %>
    </div>
  <% end %>

  <div class="text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>

