<div class="container w-50">
  <%= form_for ticket, url: url, html: { class: 'custom-form' }, method: method do |form| %>
    <div class="form-group">
      <%= form.label :name, required: true %>
      <%= form.text_field :name, class: "form-control" %>
      <%= error_for form.object, :name %>
    </div>
    <div class="form-group">
      <%= form.label :email, required: true %>
      <%= form.text_field :email, class: "form-control" %>
      <%= error_for form.object, :email %>
    </div>
    <div class="form-group">
      <%= form.label :subject, required: true %>
      <%= form.text_field :subject, class: "form-control" %>
      <%= error_for form.object, :subject %>
    </div>
    <div class="form-group">
      <%= form.label :content %>
      <%= form.text_area :content, class: "form-control" %>
      <%= error_for form.object, :content %>
    </div>
    <div class="actions mt-4">
      <%= form.submit submit_content, class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
